<h1>Dodie Worout Plans</h1>
<div id="plans-list-container" class="row">
  <ul id="plans-list">
    <% @all_plans.each do |plan| %>
    <% if plan.run_completed %>
      <li class="running">
    <% else %>
      <li>
    <% end %>
          <%= link_to plan.plan_name, "/users/#{@user.id}/training_plans/#{plan.id}", method: :put %>
      <li>
    <% end %>
  </ul>
</div>

<fieldset id="new-plan" class="row">
  <legend>New Plan</legend>
    <%= form_for [@user, @training_plan] do |f| %>
      <%= f.label :plan_name %><br>
      <%= f.text_field :plan_name %>

      <%= f.label :start_time %><br>
      <%= f.select :start_time, @times %>

      <%= f.label :end_time %><br>
      <%= f.select :end_time, @times %>

      <%= f.submit %>
    <% end %>
</fieldset>
